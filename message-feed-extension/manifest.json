{
  "manifest_version": 3,
  "name": "Message Feed",
  "description": "Show messages to user",
  "version": "1.0",
  "permissions": ["tabs", "https://baconipsum.com/api/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "User Messages",
    "default_popup": "popup/popup.html",
    "default_icon": "logo/icon16.png"
  },
  "icons": {
    "16": "logo/icon16.png",
    "48": "logo/icon48.png",
    "128": "logo/icon128.png"
  }
}
